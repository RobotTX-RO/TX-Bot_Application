<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.Joystick.JoystickView
        android:id="@+id/robot_joystick_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:id="@+id/TXRLogo"
        android:src="@drawable/txrobotic"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnJoystick"
        android:layout_alignEnd="@+id/btnJoystick"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#1e262c"
        android:layout_gravity="left|bottom" />

</LinearLayout>